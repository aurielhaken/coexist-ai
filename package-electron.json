{
  "name": "coexist-ai-desktop",
  "version": "1.0.0",
  "description": "COEXIST.AI - Assistant de Coexistence Pacifique (Desktop)",
  "main": "electron/main.js",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "electron-build": "electron-builder",
    "electron-dist": "npm run build && electron-builder --publish=never",
    "electron-pack": "electron-builder --dir",
    "electron-make": "electron-builder --mac --win --linux"
  },
  "build": {
    "appId": "com.coexist-ai.desktop",
    "productName": "COEXIST.AI",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icon-512.png",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "public/icon-512.png",
      "publisherName": "COEXIST.AI",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon-512.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "COEXIST.AI"
    },
    "dmg": {
      "title": "COEXIST.AI Installer",
      "icon": "public/icon-512.png",
      "background": "public/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "coexist-ai",
      "repo": "coexist-ai"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.1.4"
  },
  "author": {
    "name": "COEXIST.AI Team",
    "email": "contact@coexist-ai.com"
  },
  "license": "MIT",
  "homepage": "https://coexist-ai.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/coexist-ai/coexist-ai.git"
  },
  "keywords": [
    "coexistence",
    "paix",
    "conflits",
    "médiation",
    "IA",
    "résolution",
    "harmonie",
    "communication",
    "desktop",
    "electron"
  ]
}
